<%= render 'shared/error_messages', object: x.object %>

<div class="form-group">
  <%= x.label :name %><br>
  <%= x.text_field :name , class: "form-control"%>
</div>

<div class="form-group">
  <%= x.label :email %><br>
  <%= x.email_field :email , class: "form-control" %>
</div>

<div class="form-group">
  <%= x.label :password %><br>
  <%= x.password_field :password, class: "form-control" %>
</div>

<div class="form-group">
  <%= x.label :password_confirmation %><br>
  <%= x.password_field :password_confirmation , class: "form-control" %>
</div>
